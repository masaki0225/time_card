<%= form_with(model: @project, local: true) do |f| %>

  <div class="mobile-title">
    <div class="mobile-t">
      <h1>Project Edit</h1>
      <p>...完成したらチェックをつけなよ</p>
    </div>
  </div>

  <div class="title">
    <% if !@project.errors.any? %>
      <%= image_tag 'メタトン.jpg', class: 'bugerpant' %>
    <% else %>
      <%= image_tag 'metaton.jpg', class: 'bugerpant' %>
    <% end %>
    <div class="selif-left">
      <%= render "shared/error_message", object: f.object %>
      <% if !@project.errors.any? %>
       <p>Projectを編集するんだね？</p>
       <p>完成したならチェックボタンをおしなよ</p>
      <% end %>
    </div>
  </div>

  <div class="undertale">

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Compose new title..." %>
    </div>

    <div class="form-group">
      <%= f.label :github %>
      <%= f.text_field :g_url, class: 'form-control', placeholder: "githubのurl..." %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', placeholder: "Compose new micropost..." %>
    </div>

    <span class="image">
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
    </span>

    <div class="form-group">
      <%= f.check_box :finish, {class: "check_box"}, "true", "false" %>
      <%= f.label :完成 %>
    </div>

    <div class="form-group">
      <%= f.label :開始日 %>
      <%= f.date_field :start_on %>
    </div>

    <div class="form-group">
      <%= f.label :期限日 %>
      <%= f.date_field :end_on %>
    </div>

    <%= f.submit "SAVE", class: "btn btn-border" %>

  </div>


<% end %>
